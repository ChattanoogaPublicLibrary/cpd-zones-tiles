#cpddistricts {
  line-color:black;
  line-width:0.5;
  polygon-opacity:0.7;
  text-name: [CPD_Zone];
  text-face-name: "Open Sans Bold";
  text-halo-fill: white;
  text-halo-radius: 2.5;
}

#cpddistricts[CPD_Zone="Echo"] {
  polygon-fill:#ff0000;
}

#cpddistricts[CPD_Zone="Alpha"] {
  polygon-fill:#490A3D;
}

#cpddistricts[CPD_Zone="Delta"] {
  polygon-fill:#BD1550;
}

#cpddistricts[CPD_Zone="George"] {
  polygon-fill:#E97F02;
}

#cpddistricts[CPD_Zone="Fox"] {
  polygon-fill:#F8CA00;
}

#cpddistricts[CPD_Zone="Charlie"] {
  polygon-fill:#8A9B0F;
}

#cpddistricts[CPD_Zone="Bravo"] {
  polygon-fill:#0a4916;
  text-allow-overlap: true;
}
